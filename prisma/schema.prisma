// prisma/schema.prisma (or apps/api/prisma/schema.prisma if thatâ€™s your layout)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users       User[]
  products    Product[]
  orders      Order[]
  memberships Membership[]

  @@index([slug])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships    Membership[]
  Organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
}

model Membership {
  id        String   @id @default(cuid())
  userId    String
  orgId     String
  role      String
  createdAt DateTime @default(now())

  user User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, orgId])
  @@index([userId])
  @@index([orgId])
}

model Product {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  orgId           String
  sku             String
  title           String
  description     String?
  type            String // e.g. 'PHYSICAL' | 'DIGITAL'
  status          String // e.g. 'ACTIVE' | 'INACTIVE'
  price           Decimal
  inventoryQty    Int?
  lastPurchasedAt DateTime?

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  items OrderItem[]

  @@unique([orgId, sku])
  @@index([orgId, updatedAt])
}

model Order {
  id             String   @id @default(cuid())
  orgId          String
  totalQty       Int
  totalPrice     Decimal
  createdAt      DateTime @default(now())
  idempotencyKey String?  @unique

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  items OrderItem[]

  @@index([orgId, createdAt(sort: Desc)])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  unitPrice Decimal

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@index([orderId])
  @@index([productId])
}
