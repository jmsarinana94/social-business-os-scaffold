{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev": "nest start --watch",
    "build": "nest build",
    "lint": "eslint . --ext .ts",
    "test": "jest --config=jest.config.ts",
    "test:watch": "jest --watch --config=jest.config.ts",
    "test:cov": "jest --coverage --config=jest.config.ts",
    "test:e2e": "NODE_ENV=test NODE_OPTIONS='--max-old-space-size=4096' jest --config=jest.config.ts --selectProjects=e2e --runInBand",
    "test:clear": "jest --clearCache",
    "test:e2e:local": "NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=test jest --config=jest.config.ts --selectProjects e2e --runInBand",
    "smoke": "bash scripts/smoke.sh",
    "restart": "bash -lc 'PORT=${PORT:-4000}; PID=$(lsof -ti :$PORT || true); if [ -n \"$PID\" ]; then kill -9 $PID; fi; pnpm start'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force --skip-generate --skip-seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "6.14.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/types": "^30.0.5",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/testing": "^10.4.20",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.11",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "prisma": "6.14.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
