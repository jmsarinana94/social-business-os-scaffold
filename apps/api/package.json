{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "// ---------------------------------------------------------------------": "",
    "// ðŸ Core Commands": "",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build -p tsconfig.build.json",
    "clean": "rimraf dist",
    "rebuild": "pnpm run clean && nest build",
    "dev": "bash ./scripts/dev.sh",
    "// ðŸ—„ï¸  Database (Postgres + Prisma Migrations)": "",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:format": "prisma format --schema=prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=prisma/schema.prisma",
    "migrate:dev": "prisma migrate dev --schema=prisma/schema.prisma --name init",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "migrate:reset": "prisma migrate reset --force --schema=prisma/schema.prisma",
    "migrate:status": "prisma migrate status --schema=prisma/schema.prisma",
    "mock": "prism mock openapi.yaml -p ${PORT:-4010}",
    "mock:kill": "lsof -ti :${PORT:-4010} | xargs kill -9 || true",
    "mock:tail": "tail -n +1 -f /tmp/prism.log || true",
    "mock:stop": "kill -9 $(cat /tmp/prism.pid 2>/dev/null) 2>/dev/null || true",
    "demo:accounts": "bash scripts/accounts-demo.sh",
    "demo:products": "bash scripts/products-demo.sh",
    "demo:orders": "bash scripts/orders-demo.sh",
    "demo:accounts:with-mock": "pnpm -F @repo/api mock:kill && (nohup pnpm -F @repo/api mock >/tmp/prism.log 2>&1 & echo $! >/tmp/prism.pid) && BASE=http://127.0.0.1:4010 PROBE_PATH=/auth/login bash scripts/wait-for-prism.sh && pnpm -F @repo/api demo:accounts",
    "demo:products:with-mock": "pnpm -F @repo/api mock:kill && (nohup pnpm -F @repo/api mock >/tmp/prism.log 2>&1 & echo $! >/tmp/prism.pid) && BASE=http://127.0.0.1:4010 PROBE_PATH=/products bash scripts/wait-for-prism.sh && pnpm -F @repo/api demo:products",
    "demo:orders:with-mock": "pnpm -F @repo/api mock:kill && (nohup pnpm -F @repo/api mock >/tmp/prism.log 2>&1 & echo $! >/tmp/prism.pid) && BASE=http://127.0.0.1:4010 PROBE_PATH=/orders bash scripts/wait-for-prism.sh && pnpm -F @repo/api demo:orders",
    "demo:all:with-mock": "pnpm -F @repo/api mock:kill && (nohup pnpm -F @repo/api mock >/tmp/prism.log 2>&1 & echo $! >/tmp/prism.pid) && BASE=http://127.0.0.1:4010 PROBE_PATH=/auth/login bash scripts/wait-for-prism.sh && pnpm -F @repo/api demo:accounts && pnpm -F @repo/api demo:products && pnpm -F @repo/api demo:orders",
    "// ðŸŒ± Seeding & Local Reset": "",
    "db:seed": "prisma db seed --schema=prisma/schema.prisma",
    "db:push": "prisma db push --schema=prisma/schema.prisma",
    "db:reset": "pnpm run migrate:reset && pnpm run db:seed",
    "db:setup": "pnpm run prisma:generate && pnpm run migrate:deploy && pnpm run db:seed",
    "db:setup:local": "dotenv -e .env -- pnpm run prisma:generate && pnpm run migrate:deploy && pnpm run db:seed",
    "db:setup:test": "dotenv -e .env.test -- pnpm run prisma:generate && pnpm run migrate:deploy",
    "echo:4010": "node scripts/echo-4010.cjs",
    "prisma:reset": "bash ./scripts/prisma-reset.sh",
    "seed:demo": "bash ./scripts/prisma-seed-demo.sh",
    "// ðŸ”¥ Tests & Smoke": "",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs --selectProjects=unit",
    "test:e2e": "dotenv -e .env.test -- jest --config ./jest-e2e.config.cjs --runInBand",
    "test:e2e:cov": "dotenv -e .env.test -- jest --config ./jest-e2e.config.cjs --runInBand --coverage",
    "test:e2e:fresh": "dotenv -e .env.test -- pnpm run db:setup:test && pnpm run build && pnpm run test:e2e",
    "test:e2e:products": "dotenv -e .env.test -- jest --config jest.config.cjs --selectProjects=e2e --runInBand -- test/e2e/products.validation.e2e-spec.ts",
    "test:one": "dotenv -e .env.test -- jest --config ./jest-e2e.config.cjs --runInBand --testPathPattern",
    "smoke": "bash ./scripts/smoke.sh --json",
    "inv:test": "bash ./scripts/inventory-test.sh",
    "// ðŸ§¹ Utility & Formatting": "",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "dependencies": {
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "10.4.20",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "6.18.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.12.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "express-rate-limit": "^7.5.1",
    "ioredis": "^5.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "19.1.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.20",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.11.30",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-prisma": "5.0.0",
    "prettier-plugin-tailwindcss": "0.7.1",
    "prisma": "6.18.0",
    "rimraf": "6.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
