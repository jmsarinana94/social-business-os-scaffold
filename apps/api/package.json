{
  "name": "api",
  "private": true,
  "version": "0.0.0",
  "description": "NestJS API for Social Business OS scaffold",
  "license": "MIT",
  "engines": {
    "node": ">=18.17 <21 || >=20.10"
  },
  "scripts": {
    "dev": "nest start --watch -r tsconfig-paths/register",
    "start": "nest start -r tsconfig-paths/register",
    "build": "nest build && tsc-alias -p tsconfig.json",
    "prestart:prod": "pnpm run build",
    "start:prod": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "// tests": "─────────────────────────────────────────────",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --config=jest.config.ts --selectProjects unit",
    "test:e2e": "NODE_ENV=test jest --config=jest.config.ts --selectProjects e2e",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "test:cov": "jest --coverage",
    "test:ci": "NODE_ENV=test jest --config=jest.config.ts --runInBand --coverage",
    "// k6": "─────────────────────────────────────────────",
    "load:products:smoke": "k6 run test/load/products.smoke.k6.js",
    "load:products:soak": "k6 run test/load/products.soak.k6.js",
    "smoke": "bash scripts/smoke.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^5.2.0",
    "@prisma/client": "^6.14.0",
    "@repo/db": "workspace:*",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
