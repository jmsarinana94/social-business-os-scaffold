{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/src/main.js",
  "scripts": {
    "dev": "nest start --watch",
    "dev:api": "bash scripts/dev.sh",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "smoke": "bash scripts/smoke.sh",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:seed": "node prisma/seed.cjs",
    "db:reset": "prisma db push --force-reset && prisma generate",
    "db:seed:demo": "ORG=demo API_EMAIL=tester@example.com API_PASS=password123 pnpm prisma db seed",
    "test": "jest --config jest.config.ts",
    "test:e2e": "jest --config jest.config.ts --selectProjects=e2e --runInBand",
    "test:e2e:products": "jest --config jest.config.ts --selectProjects=e2e --runInBand -- products.validation.e2e-spec.ts",
    "test:e2e:mac": "mkdir -p .tmp/jest-cache && TMPDIR=$(pwd)/.tmp jest --config jest.config.ts --selectProjects=e2e --runInBand --cacheDirectory $(pwd)/.tmp/jest-cache",
    "e2e:mac": "bash ./scripts/e2e-mac.sh",
    "e2e:quick": "mkdir -p .tmp/jest-cache && TMPDIR=$(pwd)/.tmp pnpm -F @repo/api test:e2e --cacheDirectory $(pwd)/.tmp/jest-cache",
    "openapi:lint": "npx @redocly/cli lint openapi.yaml",
    "openapi:preview": "npx @redocly/cli preview-docs openapi.yaml -p 8088"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "6.14.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "3.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "6.14.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}