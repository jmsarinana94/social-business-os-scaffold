    "@nestjs/platform-express": "10.4.20",
    "@nestjs/swagger": "7.4.2",
    "@nestjs/throttler": "6.4.0",
    "@prisma/client": "6.17.1",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "helmet": "8.1.0",
    "ioredis": "5.4.1",
