# API base URL and default org
export BASE="http://localhost:4000"
export ORG="demo"

# Source overrides if present (e.g. local secrets)
source_env_if_exists .envrc.local

# Stable local account so tokens don't change between runs
export API_EMAIL="tester@example.com"
export API_PASS="password"

# Load curl helper functions (aget, apost, aput, adel, ensure_tok, etc.)
if [ -f ./scripts/api-helpers.sh ]; then
  source ./scripts/api-helpers.sh
fi

# Add node_modules binaries to PATH
export PATH="./node_modules/.bin:$PATH"