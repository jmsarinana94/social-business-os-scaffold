# apps/api/.envrc
# direnv will load this when you cd into apps/api

# Fallbacks (can be overridden in .env or shell)
export DATABASE_URL=${DATABASE_URL:=postgresql://sbo:sbo@localhost:5432/sbo?schema=public}
export ORG=${ORG:=demo}
export API_EMAIL=${API_EMAIL:=tester@example.com}
export API_PASS=${API_PASS:=password123}

# Make local node/pnpm available if needed
PATH_add node_modules/.bin

# Auto-load .env and optional .env.local (do not commit secrets)
set -a
[ -f .env ] && . ./.env
[ -f .env.local ] && . ./.env.local
set +a