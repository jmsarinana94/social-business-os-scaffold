// apps/api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String       @id @default(cuid())
  title       String
  description String?
  // Keep string to match your DTO validators (physical|digital)
  type        String
  // Keep string to match your DTO validators (active|inactive)
  status      String
  price       Decimal      @db.Decimal(10, 2)
  sku         String       @unique
  orgId       String
  org         Organization @relation(fields: [orgId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId, createdAt])
  @@index([orgId, status])
}
