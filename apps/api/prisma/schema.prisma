// apps/api/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  PHYSICAL
  SERVICE
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  slug      String?   @unique

  products  Product[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id           String         @id @default(uuid())
  orgId        String
  org          Organization   @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // Business identifiers
  sku          String

  // Core data
  title        String
  type         ProductType
  status       ProductStatus
  price        Decimal        @db.Decimal(10, 2)
  description  String?
  inventoryQty Int            @default(0)

  // Timestamps
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // Indexes / Uniques
  @@index([orgId])
  @@unique([orgId, sku], map: "Product_orgId_sku_key")
}