{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* ---------------------------
     * Build output configuration
     * --------------------------- */
    "outDir": "./dist",
    "rootDir": "./src",

    /* ---------------------------
     * Module & target
     * --------------------------- */
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",

    /* ---------------------------
     * Emission & diagnostics
     * --------------------------- */
    "declaration": false,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": false,

    /* ---------------------------
     * Type safety & compatibility
     * --------------------------- */
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ---------------------------
     * Decorators & metadata
     * --------------------------- */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  /* ---------------------------
   * Include source files only
   * --------------------------- */
  "include": ["src/**/*"],

  /* ---------------------------
   * Exclude non-build artifacts
   * --------------------------- */
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "scripts",
    "prisma",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts"
  ]
}
