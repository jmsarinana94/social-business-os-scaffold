generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite as you use
  url      = env("DATABASE_URL")
}

model Organization {
  id        String    @id @default(cuid())
  slug      String    @unique
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum ProductType {
  PHYSICAL
  DIGITAL
}

enum ProductStatus {
  ACTIVE
  INACTIVE
}

model Product {
  id             String        @id @default(cuid())
  title          String
  type           ProductType
  status         ProductStatus
  price          Float
  sku            String
  description    String?
  inventoryQty   Int           @default(0)

  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
  @@unique([organizationId, sku]) // per-org SKU uniqueness
}