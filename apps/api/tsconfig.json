{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "skipLibCheck": true,

    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "scripts/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts"
  ]
}