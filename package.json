{
  "name": "social-business-os",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:generate": "prisma generate --schema packages/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema packages/db/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema packages/db/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema packages/db/prisma/schema.prisma",
    "dev:api": "cross-env PORT=4000 ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "build:api": "tsc -p apps/api/tsconfig.build.json",
    "start:api": "node dist/apps/api/main.js",
    "dev:api": "cross-env PORT=4000 ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "prisma:generate:api": "pnpm --filter ./apps/api prisma generate",
    "seed:org": "pnpm --filter ./apps/api exec ts-node -r tsconfig-paths/register scripts/seed-org.ts",
    "test:e2e": "cross-env BASE_URL=http://127.0.0.1:4000 ORG=acme jest -c apps/api/jest-e2e.config.js --runInBand",
    "k6:race": "k6 run apps/api/k6/idempotency-race.test.js",
    "k6:dupesku": "k6 run apps/api/k6/dupe-sku-upsert.test.js"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"commonjs\"} packages/db/prisma/seed.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "6.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.7.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.1.14"
  }
}