{
  "name": "social-business-os",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --parallel",
    "typecheck": "turbo run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// ----- API wrappers -----": "----",
    "start:api": "pnpm -C apps/api start",
    "restart:api": "pnpm -C apps/api restart",
    "smoke:api": "BASE=${BASE:-http://127.0.0.1:4000} ORG=${ORG:-demo} pnpm -C apps/api smoke",
    "port-kill:api": "pnpm -C apps/api port-kill",
    "// Convenience aliases (run from repo root)": "----",
    "start": "pnpm start:api",
    "restart": "pnpm restart:api",
    "smoke": "pnpm smoke:api",
    "port-kill": "pnpm port-kill:api",
    "postinstall": "pnpm -w exec prisma generate --schema packages/db/prisma/schema.prisma",
    "// no-op so pnpm restart doesnâ€™t complain at root": "----",
    "stop": "echo noop"
  },
  "devDependencies": {
    "@nestjs/cli": "10",
    "@next/eslint-plugin-next": "^15.4.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.11",
    "@types/passport-jwt": "^3.0.13",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "6.14.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "turbo": "^2.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@prisma/client": "6.14.0",
    "bcrypt": "^5.1.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "zod": "^3.25.76"
  }
}
