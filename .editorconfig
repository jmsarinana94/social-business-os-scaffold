# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Use 2 spaces for indentation everywhere
indent_style = space
indent_size = 2

# Markdown files — don’t trim trailing spaces (important for line breaks)
[*.md]
trim_trailing_whitespace = false

# JSON & YAML — use 2 spaces
[*.{json,yml,yaml}]
indent_size = 2

# Package.json always with 2 spaces (npm/yarn/pnpm convention)
[package.json]
indent_size = 2